#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# $Id: rules,v 1.2 2006/02/22 09:18:30 quozl Exp $
# This file is public domain software, originally written by Joey Hess. 

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
export DH_COMPAT=4

build: build-stamp
build-stamp:
	dh_testdir

	./configure --bindir=/usr/games --libdir=/usr/lib/netrek-server-vanilla --sysconfdir=/etc/netrek-server-vanilla --localstatedir=/var/lib/netrek-server-vanilla --prefix=
	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	-$(MAKE) distclean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

# Add here commands to install the package into debian/<packagename>
	$(MAKE) DESTDIR=`pwd`/debian/`dh_listpackages`/ install
#	mkdir -p `pwd`/debian/`dh_listpackages`/

# init.d script
	mkdir -p `pwd`/debian/`dh_listpackages`/etc/init.d
	cp `pwd`/debian/init `pwd`/debian/`dh_listpackages`/etc/init.d/netrek-server-vanilla
	chmod +x `pwd`/debian/`dh_listpackages`/etc/init.d/netrek-server-vanilla
# documentation
	mkdir -p `pwd`/debian/`dh_listpackages`/usr/share/doc/netrek-server-vanilla
	cp ChangeLog NEWS README README.developers PROJECTS INSTALL* docs/RSS* docs/meta* docs/multicast* `pwd`/debian/`dh_listpackages`/usr/share/doc/netrek-server-vanilla/

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installdebconf	
	dh_installdocs debian/copyright \
	debian/README.Debian
	dh_installexamples
	dh_installmenu
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
	dh_installinfo
#	dh_undocumented
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_makeshlibs
	dh_installdeb
#	dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
